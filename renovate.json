{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    "schedule:weekly"
  ],
  "timezone": "Europe/Moscow",
  "schedule": [
    "before 9am on monday"
  ],
  "labels": [
    "dependencies"
  ],
  "assignees": [
    "vyacheslav"
  ],
  "reviewers": [
    "vyacheslav"
  ],
  "commitMessagePrefix": "chore:",
  "commitMessageAction": "update",
  "commitMessageTopic": "{{depName}}",
  "commitMessageExtra": "to {{newVersion}}",
  "packageRules": [
    {
      "matchPackageNames": [
        "Django",
        "djangorestframework",
        "psycopg2-binary"
      ],
      "matchUpdateTypes": [
        "major"
      ],
      "enabled": false
    },
    {
      "matchPackageNames": [
        "pytest",
        "pytest-django",
        "pytest-cov",
        "coverage"
      ],
      "groupName": "testing tools"
    },
    {
      "matchPackageNames": [
        "ruff",
        "black",
        "isort",
        "flake8"
      ],
      "groupName": "linting tools"
    },
    {
      "matchPackageNames": [
        "selenium",
        "locust"
      ],
      "groupName": "testing frameworks"
    },
    {
      "matchPackageNames": [
        "google-generativeai",
        "openai"
      ],
      "groupName": "AI providers"
    },
    {
      "matchPackageNames": [
        "python-telegram-bot"
      ],
      "groupName": "telegram bot"
    }
  ],
  "vulnerabilityAlerts": {
    "enabled": true,
    "labels": [
      "security"
    ],
    "assignees": [
      "vyacheslav"
    ]
  },
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": [
      "before 9am on monday"
    ]
  }
}
