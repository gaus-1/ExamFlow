{
  "env": {
    "browser": true,
    "es2021": true,
    "jquery": true
  },
  "extends": "airbnb-base",
  "parserOptions": {
    "ecmaVersion": 2022,
    "sourceType": "module"
  },
  "rules": {
    "no-console": "warn",
    "no-unused-vars": "warn",
    "prefer-const": "warn",
    "no-var": "error",
    "indent": ["error", 2],
    "quotes": ["error", "single"],
    "semi": ["error", "always"],
    "max-len": ["warn", { "code": 120 }],
    "no-multiple-empty-lines": ["error", { "max": 1 }],
    "no-trailing-spaces": "error",
    "comma-dangle": ["error", "never"],
    "object-curly-spacing": ["error", "always"],
    "arrow-parens": ["error", "always"],
    "no-magic-numbers": ["warn", { "ignore": [0, 1, -1, 100, 200, 404, 500] }],
    "linebreak-style": "off"
  },
  "globals": {
    "sendAIQuery": "readonly",
    "Chart": "readonly"
  }
}
