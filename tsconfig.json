{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "allowJs": true,
    "checkJs": false,
    "outDir": "dist",
    "types": ["vite/client", "vitest/globals", "node"]
  },
  "include": ["static/js/**/*.ts", "static/js/**/*.tsx"],
  "exclude": ["node_modules", "dist"]
}

